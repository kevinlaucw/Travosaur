@model Travosaur.Models.ManageTourViewModel

@{
    ViewBag.Title = "Delete Tour";
}

<h2>@ViewBag.Title</h2>

<h4>Are you sure you want to delete this tour?</h4>

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.TourID)
        <div class="form-group">
            @Html.LabelFor(model => model.TourName, htmlAttributes: new { @class = "control-label-viewtour col-md-2" })
            <div class="col-md-10">
                @Model.TourName
            </div>
        </div>     
        <div class="form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
            }
        </div>
    </div>

<div>
     @Html.ActionLink("Back to My Listings", "MyListings")
</div>
